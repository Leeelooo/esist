<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="EsistTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorError">@color/colorPrimaryError</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="bottomNavigationStyle">@style/EsistTheme.BottomNavigation</item>

        <item name="colorControlNormal" tools:targetApi="M">
            @color/colorOnPrimary
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">
            true
        </item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            true
        </item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">
            @color/colorPrimaryBackground
        </item>
    </style>

    <style name="EsistTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.EsistTheme.Button</item>
    </style>

    <style name="EsistTheme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">

    </style>

</resources>